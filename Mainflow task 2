--CREATING A TABLE

CREATE TABLE PATIENTS(
PATIENT_ID INT,
NAME VARCHAR2(30),
AGE INT,
WARD_NUMBER INT,
DOCTOR_ASSIGNED VARCHAR2(30)
);

--Inserting values

INSERT INTO PATIENTS VALUES (1, 'ABI', 30, 1, 'Dr.RAJ');
INSERT INTO PATIENTS VALUES(2,'SAM',40,1,'Dr.RAJ');
INSERT INTO PATIENTS VALUES(3,'AYUSH',33,4,'Dr.KINSHI');
INSERT INTO PATIENTS VALUES(4,'MATHAN',47,2,'Dr.ANU');
INSERT INTO PATIENTS VALUES(5,'MANI',28,5,'Dr.MAGA');

--SHOWING MY TABLE

SELECT*FROM PATIENTS;

--AGGREGATE FUNCTION

SELECT SUM(AGE) FROM PATIENTS;

SELECT COUNT(*) FROM PATIENTS;

SELECT AVG(AGE) FROM PATIENTS;

SELECT MAX(AGE) FROM PATIENTS;

SELECT * FROM PATIENTS
WHERE AGE = (SELECT MAX(AGE) FROM PATIENTS);
